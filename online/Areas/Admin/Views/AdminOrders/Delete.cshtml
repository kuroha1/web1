@model online.Models.Order

@{
    ViewData["Title"] = "Xóa Don hang";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="padding-left:20px">@ViewBag.Title</h2>

<h3 style="padding-left:20px">Bạn có chắc muốn xóa Khách hàng  này ?</h3>
<hr />
<body>
    <div class="w3-container" style="width:70%">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="w3-table-all w3-card-4">
                <tr>
                    <th>  @Html.DisplayNameFor(model => model.CustomerId) </th>
                    <th>    @Html.DisplayFor(model => model.CustomerId) </th>
                </tr>

                <tr>
                    <th>  @Html.DisplayNameFor(model => model.OrderDate) </th>
                    <th>    @Html.DisplayFor(model => model.OrderDate) </th>
                </tr>

                <tr>
                    <th>  @Html.DisplayNameFor(model => model.ShipDate) </th>
                    <th>    @Html.DisplayFor(model => model.ShipDate) </th>
                </tr>

                <tr>
                    <th>  @Html.DisplayNameFor(model => model.Deleted) </th>
                    <th>    @Html.DisplayFor(model => model.Deleted) </th>
                </tr>

                <tr>
                    <th>  @Html.DisplayNameFor(model => model.Paid) </th>
                    <th>    @Html.DisplayFor(model => model.Paid) </th>
                </tr>

                <tr>
                    <th>  @Html.DisplayNameFor(model => model.PaymentDate) </th>
                    <th>    @Html.DisplayFor(model => model.PaymentDate) </th>
                </tr>

                <tr>
                    <th>  @Html.DisplayNameFor(model => model.Note) </th>
                    <th>    @Html.DisplayFor(model => model.Note) </th>
                </tr>
            </table>
            <br />

            <tr>
                <th>  Xác nhận xóa </th>
                <th>
                    <form asp-action="Delete" asp-controller="AdminCustomers" asp-route-id="@Model.OrderId">
                        <input type="hidden" asp-for="OrderId" />
                        <input style="padding-left:20px" type="submit" value="Xóa" class="btn btn-default" /> |
                        <a asp-action="Index" style="padding-left:20px">Quay về</a>
                    </form>
                </th>
            </tr>
        </form>
    </div>
</body>