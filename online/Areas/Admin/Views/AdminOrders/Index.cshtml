@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<online.Models.Order>
@{
    ViewData["Title"] = "Danh sách Đơn hàng";
}

@{
    ViewData["Title"] = "Quản lý Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="padding-left:20px">Quản lý Đơn Hàng </h2>

<p>
    <a asp-action="Create" style="padding-left:20px">Tạo Mới</a>
</p>

<body>
    <div class="w3-container">
        <table class="w3-table-all w3-card-4">
            <tr>
                <th>ID</th>
                        <th>Đơn hàng</th>
                        <th>Ngày mua</th>
                        <th>Trạng thái</th>
                        <th>#</th>
            </tr>

            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>  @Html.DisplayFor(modelItem => item.OrderId)</td>
                        <td>  @Html.DisplayFor(modelItem => item.OrderDetails)</td>
                        <td> @Html.DisplayFor(modelItem => item.OrderDate)</td>
                        <td> @Html.DisplayFor(modelItem => item.TransactStatus.Status)</td> 
                        <td>
                            <a  asp-controller="AdminOrder" asp-action="Edit"
                        asp-route-id="@item.OrderId">Edit</a> |
                            <a asp-controller="AdminOrder" asp-action="Details"
                       asp-route-id="@item.OrderId">Details</a> |
                            <a asp-controller="AdminOrder" asp-action="ChangeStatus"
                       asp-route-id="@item.OrderId">Cập nhật trạng thái</a>

                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</body>